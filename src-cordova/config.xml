<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.atsgarradeaguia.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Gerenciador de Mensalidades</name>
    <description>Gerencia mensalidades</description>
    <author email="c.afonso.braga@gmail.com" href="http://atsgarradeaguia.com.br">
      Carlos Afonso Braga
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="platforms/android/app/src/main/res/drawable/icon.png" />
        <icon density="ldpi" src="platforms/android/app/src/main/res/drawable-ldpi/icon.png" />
        <icon density="mdpi" src="platforms/android/app/src/main/res/drawable-mdpi/icon.png" />
        <icon density="hdpi" src="platforms/android/app/src/main/res/drawable-hdpi/icon.png" />
        <icon density="xhdpi" src="platforms/android/app/src/main/res/drawable-xhdpi/icon.png" />
        <icon density="xxhdpi" src="platforms/android/app/src/main/res/drawable-xxhdpi/icon.png" />
        <icon density="xxxhdpi" src="platforms/android/app/src/main/res/drawable-xxxhdpi/icon.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
